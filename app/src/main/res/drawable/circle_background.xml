<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="#E0E0E0"/> <!-- You can customize this color -->

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC"/> <!-- Customize border color and width -->

    <!-- Size of the circle -->
    <size
        android:width="100dp"
        android:height="100dp"/> <!-- Adjust size to match your ImageView size -->

    <corners android:radius="50dp"/>
</shape>
